<div class="bg-gray-800 text-white text-center py-20 ">
    <h1 class="text-5xl font-bold mb-4">Welcome to Secure Cart</h1>
    <p class="text-xl mb-8">The finest and most ethical store for university geese as seen at the University of Warwick and more!</p>
    <%= link_to "Shop Now!", root_path, class: "bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded" %>
</div>

<div class="fex flex-wrap justify-center mt-8 items-center gap-10">
    <% @main_categories.each do |category| %>
        <%= link_to category_path(category) do %>
            <div class="flex flex-col mb-4">
                <h2 class="text-gray-800 font-medium text-lg text-center mb-6">
                    <%= category.name %></h2>
                    <%= category.image.present? ? image_tag(category.image, class: "max-w-lg justify-center items-center px-8") : image_tag('https://dummyimage.com/512x512/000/fff') %>
            </div>
        <% end %>
    <% end %>
</div>

<div class="bg-gray-100 py-20 my-10">
    <div class="container mx-auto px-6">
        <h2 class=" text-4xl font-bold text-center text-gray-800 mb-8">Customer Testimonials</h2>
        <div class="flex flex-wrap">
            <div class="w-full md:w-1/3 px-2 mb-4">
                <div class="bg-gray-100 rounded shadow py-4 px-4">
                    <p class="text-gray-800 text-base mb-4">
                        "I love my Warwick Lakeside duck more than my husband"
                    </p>
                    <p class="text-gray-800 text-xs">
                        -Totally Real Customer
                    </P>

                </div>
            </div>
        </div>
        <div class="flex flex-wrap">
            <div class="w-full md:w-1/3 px-2 mb-4">
                <div class="bg-gray-100 rounded shadow py-4 px-4">
                    <p class="text-gray-800 text-base mb-4">
                        "I have both the Warwick and Bath mallards and the Warwick totally rocks!"
                    </p>
                    <p class="text-gray-800 text-xs">
                        -WarwickCookieLover214
                    </P>

                </div>
            </div>
        </div>
        <div class="flex flex-wrap">
            <div class="w-full md:w-1/3 px-2 mb-4">
                <div class="bg-gray-100 rounded shadow py-4 px-4">
                    <p class="text-gray-800 text-base mb-4">
                        "This goose is way better than the puffer jacket"
                    </p>
                    <p class="text-gray-800 text-xs">
                        -CanadaGoose
                    </P>

                </div>
            </div>
        </div>
    </div>
</div>