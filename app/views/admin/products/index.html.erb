<% content_for :title, "Products" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Products</h1>
    <%= link_to "New product", new_admin_product_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>


  <div class="flex flex-col w-full">
  <div class="overflow-x-auto sm:mx-0.5 lg:mx-0.5">
    <div class="py-2 inline-block min-w-full">
      <div class="overlow-x-auto">
        <table class="min-w-full overflow-x-scroll">
          <thead class="bg-white border-b">
            <tr>
              <th scope="col" class='text-sm font-medium text-gray-800 px-6 py-4 text-left'>
              </th>
              <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
                Name 
              </th>
              <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
                Description 
              </th>
              <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
                Price 
              </th>
            </tr>
          </thead>
          <tbody>
            <% @admin_products.each do |admin_product| %>
              <tr class="bg-gray-50 border-b">
                <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-800 underline">
                  <%#Checks if there is an image present in the product and if there is then loads it into the table otherwise uses a placeholder#%>
                  <%= admin_product.images.any? ? image_tag(admin_product.images.first.variant(:thumb)) : image_tag(%"https://placehold.co/50")%>
                </td>
                <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-800 underline">
                  <%= link_to admin_product.name, edit_admin_product_path(admin_product) %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-800">
                  <%= admin_product.description  %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-800">
                  <%#Displays the price of the assocaited item and divides by hundred to give pounds and pennies#%>
                  Â£<%= (admin_product.price/100.0).to_s  %>
                </td>
              </tr>
            <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
