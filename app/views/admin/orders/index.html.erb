<% content_for :title, "Orders" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Orders</h1>
    <%= link_to "New order", new_admin_order_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

<h2>Unfullfilled Orders</h2>
<div class="flex flex-col w-full">
  <div class="overflow-x-auto sm:mx-0.5 lg:mx-0.5">
    <div class="py-2 inline-block min-w-full">
      <div class="overlow-x-auto">
        <table class="min-w-full overflow-x-scroll">
          <thead class="bg-white border-b">
            <tr>
              <th scope="col" class='text-sm font-medium text-gray-800 px-6 py-4 text-left'>
                ID
              </th>
              <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
                Customer Email 
              </th>
              <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
                Address 
              </th>
              <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
                Total 
              </th>
              <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
                Fulfilled 
              </th>
            </tr>
          </thead>
          <tbody>
            <% @not_fullfilled_orders.each do |admin_order| %>
              <tr class="bg-gray-50 border-b">
                <td class="px-6 py-4 whitespace-nowrap font-medium teext-gray-800 underline">
                  <%= link_to admin_order.id, [:admin, admin_order], class: 'underline'%>
                </td>
                <td class="px-6 py-4 whitespace-nowrap font-medium teext-gray-800 underline">
                  <%=  admin_order.customer_email%>
                </td>
                <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-800 underline">
                  <%= admin_order.address %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-800">
                  <%= admin_order.total  %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-800">
                  <%= admin_order.fullfilled  %>
                </td>
              </tr>
            <% end %>
        </table>
      </div>
    </div>
  </div>

  <h2>Fullfilled Orders</h2>
  <div class="flex flex-col w-full">
  <div class="overflow-x-auto sm:mx-0.5 lg:mx-0.5">
    <div class="py-2 inline-block min-w-full">
      <div class="overlow-x-auto">
        <table class="min-w-full overflow-x-scroll">
          <thead class="bg-white border-b">
            <tr>
              <th scope="col" class='text-sm font-medium text-gray-800 px-6 py-4 text-left'>
                ID
              </th>
              <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
                Customer Email 
              </th>
              <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
                Address 
              </th>
              <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
                Total 
              </th>
              <th scope="col" class="text-sm font-medium text-gray-800 px-6 py-4 text-left">
                Fulfilled 
              </th>
            </tr>
          </thead>
          <tbody>
            <% @fullfilled_orders.each do |admin_order| %>
              <tr class="bg-gray-50 border-b">
                <td class="px-6 py-4 whitespace-nowrap font-medium teext-gray-800 underline">
                  <%= link_to admin_order.id, [:admin, admin_order], class: 'underline'%>
                </td>
                <td class="px-6 py-4 whitespace-nowrap font-medium teext-gray-800 underline">
                  <%=  admin_order.customer_email%>
                </td>
                <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-800 underline">
                  <%= admin_order.address %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-800">
                  <%= admin_order.total  %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-800">
                  <%= admin_order.fullfilled  %>
                </td>
              </tr>
            <% end %>
        </table>
      </div>
    </div>
  </div>

</div>
